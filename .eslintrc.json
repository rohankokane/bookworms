{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "prettier", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 13,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "indent": ["warn", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off"
  }
}
